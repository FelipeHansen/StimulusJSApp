<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %><br>
  </div>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %><br>
  </div>

  <div data-controller="showhide" data-showhide-show-if-value="brasil">
    <%= form.label :country %><br>
    <%= form.select :country, User.countries, {include_blank: false}, { data: {showhide_target: "input", action: "change->showhide#toggle"}} %><br><br><br>

    <div data-showhide-target="output">
      <%= form.label :soccer_team, style: "display: block" %><br>
      <%= form.text_field :soccer_team %><br>
    </div>
  </div>

      <%= form.submit %>
    </div>
<% end %>
